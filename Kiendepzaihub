-- Create the GUI
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
local Button = Instance.new("TextButton")

-- Button properties
Button.Size = UDim2.new(0, 200, 0, 50)
Button.Position = UDim2.new(0.5, -100, 0.5, -25)
Button.Text = "Start Auto-Farm"
Button.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
Button.Parent = ScreenGui

local autoFarming = false -- Variable to track if auto-farming is active

-- Function to handle the farming logic
local function autoFarm()
    while autoFarming do
        -- Your original script logic goes here
        local QuestName = "MarineQuest2" -- Example initial quest
        local QuestInfo = GetQuestInfo(QuestName) -- Call to your quest function
        local QuestLevel = QuestInfo[1]
        local NPCPosition = QuestInfo[2]
        local MobName = QuestInfo[3]

        -- Example of where you would handle quest logic
        print("Farming for: " .. MobName) -- Replace with your actual logic

        wait(1) -- Adjust wait time as necessary
    end
end

-- Button click event
Button.MouseButton1Click:Connect(function()
    if autoFarming then
        autoFarming = false
        Button.Text = "Start Auto-Farm"
    else
        autoFarming = true
        Button.Text = "Stop Auto-Farm"
        autoFarm() -- Start the farming process
    end
end)

-- Existing function definitions
function GetQuestInfo(QuestName) -- Example function
    local QuestLevel, MobName, NPCPosition, LevelRequire, Mon
    if QuestName == "MarineQuest2" then
        QuestLevel = 1
        MobName = "Chief Petty Officer [Lv. 120]"
        Mon = "Chief Petty Officer"
        LevelRequire = 120
        NPCPosition = CFrame.new(0, 0, 0) -- Update with actual position if needed
    elseif QuestName == "ImpelQuest" then
        QuestLevel = 2
        MobName = "Dangerous Prisoner [Lv. 190]"
        Mon = "Dangerous Prisoner"
        LevelRequire = 210
        NPCPosition = CFrame.new(5310.60547, 0.350014925, 474.946594)
    elseif QuestName == "SkyExp1Quest" then
        QuestLevel = 2
        MobName = "Sky Enemy" -- Update with actual enemy names
        Mon = "Sky Enemy"
        LevelRequire = 300
        NPCPosition = CFrame.new(-7859.09814, 5544.19043, -381.476196)
    elseif QuestName == "Area2Quest" and QuestLevel == 2 then
        QuestLevel = 1
        MobName = "Swan Pirate [Lv. 775]"
        Mon = "Swan Pirate"
        LevelRequire = 775
    end

    return {
        QuestLevel,
        NPCPosition,
        MobName,
        QuestName,
        LevelRequire,
        Mon,
    }
end

